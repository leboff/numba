<header class="section_tit">
  <h3>Home</h3>
</header>
<div id="emails_count"><%= email_count %></div>

<div class="e">
  <ul class="emails">
    <%= render @emails %>
  </ul>

  <%= form_for Email.new, :remote => true do |f| %>
      <%= f.label 'email address' %>
      <br/>
      <%= f.email_field 'address', :class => 'submittable' %>
      <%= f.submit %>
  <% end %>
</div>

<header class="section_tit">
  <h3>Listings</h3>
</header>
  <div id="list_form">
 <%= form_for Listing.new, :remote => true do |f| %>
      <%= f.label 'New Listing Name' %>
      <br/>
      <%= f.text_field 'name', :class => 'submittable' %>
      <%= f.submit %>
  <% end %>
</div>
<div class="listings">


  <%= render @listings %>


</div>
